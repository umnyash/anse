mixin reviews-intro-photos-modal-gallery-slider
  .gallery-slider&attributes(attributes)
    .gallery-slider__slider.swiper
      ul.gallery-slider__list.swiper-wrapper
        each i in [1, 2, 3, 1, 2]
          li.gallery-slider__item.swiper-slide
            picture.gallery-slider__image-wrapper.media.media--cover.media--position_top.skeleton
              img.gallery-slider__image.media__image(src=`img/reviews-intro/${i}.webp` width='622' height='786' alt='' loading='lazy')
    +slider-arrows(class='gallery-slider__arrows slider-arrows--big')
