mixin catalog-filter
  form.catalog-filter&attributes(attributes)
    .catalog-filter__header
      h2.catalog-filter__heading Фильтры
      button.catalog-filter__close-button(type='button')
        span.visually-hidden Закрыть
    .catalog-filter__content
      ul.catalog-filter__sections.folds.folds--small
        li.catalog-filter__section.folds__item
          .folds__item-header
